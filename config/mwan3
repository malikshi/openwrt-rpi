config globals 'globals'
	option mmx_mask '0x3F00'
	option rtmon_interval '5'

config policy 'balanced'
	option last_resort 'unreachable'
	list use_member 'mueth1'
	list use_member 'mueth2'
	list use_member 'mueth3'
	list use_member 'mueth4'

config rule 'default_rule'
	option dest_ip '0.0.0.0/0'
	option use_policy 'balanced'
	option proto 'all'
	option family 'ipv4'
    option sticky '0'

config rule 'default_rule_ipv6'
    option family 'ipv6'
    option dest_ip '::/0'
    option proto 'all'
    option sticky '0'
    option use_policy 'balanced'

config interface 'ueth1'
    option enabled '1'
    option initial_state 'online'
    option family 'ipv4'
    option track_method 'ping'
    option keep_failure_interval '1'
    option timeout '5'
    option interval '3'
    option failure_interval '3'
    option recovery_interval '1'
    option count '4'
    option max_ttl '60'
    option reliability '4'
    option size '56'
    option down '5'
    option up '5'
    list track_ip '192.168.8.1'
    list track_ip '192.168.8.102'
    list track_ip '8.8.8.8'
    list track_ip '8.8.4.4'
    list flush_conntrack 'ifup'

